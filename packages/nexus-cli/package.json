{
  "name": "@adverant-nexus/cli",
  "version": "2.0.0",
  "description": "World-class CLI for Adverant-Nexus - Surpassing Claude Code and Gemini CLI",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "nexus": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:build": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "docs:dev": "cd docs-site && npm run docs:dev",
    "docs:build": "cd docs-site && npm run docs:build",
    "docs:preview": "cd docs-site && npm run docs:preview",
    "docs:install": "cd docs-site && npm install",
    "prepublishOnly": "npm run validate && npm run clean && npm run build",
    "prepack": "npm run build",
    "postpack": "echo '✓ Package created successfully'",
    "validate": "node scripts/prepublish.js",
    "verify": "node scripts/verify-package.js",
    "link:global": "npm run build && npm link",
    "unlink:global": "npm unlink -g @adverant-nexus/cli",
    "publish:dry": "npm publish --dry-run",
    "publish:test": "npm run verify",
    "completions:install": "bash scripts/install-completions.sh",
    "completions:install:bash": "bash scripts/install-completions.sh --shell bash",
    "completions:install:zsh": "bash scripts/install-completions.sh --shell zsh",
    "completions:install:fish": "bash scripts/install-completions.sh --shell fish",
    "postinstall": "echo '\nℹ️  To install shell completions, run: npm run completions:install\n'"
  },
  "keywords": [
    "nexus",
    "nexus",
    "cli",
    "ai",
    "mcp",
    "model-context-protocol",
    "autonomous-agents",
    "multi-agent",
    "graphrag",
    "microservices",
    "devtools"
  ],
  "author": "Adverant AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adverant/Adverant-Nexus-Open-Core.git",
    "directory": "packages/nexus-cli"
  },
  "homepage": "https://github.com/adverant/Adverant-Nexus-Open-Core",
  "bugs": {
    "url": "https://github.com/adverant/Adverant-Nexus-Open-Core/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ansi-escapes": "^6.2.0",
    "axios": "^1.6.2",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "cli-cursor": "^4.0.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "configstore": "^7.0.0",
    "cosmiconfig": "^9.0.0",
    "date-fns": "^3.0.6",
    "dayjs": "^1.11.10",
    "debug": "^4.3.4",
    "dotenv": "^16.6.1",
    "eventemitter3": "^5.0.1",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "figures": "^6.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "listr2": "^8.0.1",
    "lodash-es": "^4.17.21",
    "log-symbols": "^6.0.0",
    "nanospinner": "^1.1.0",
    "node-fetch": "^3.3.2",
    "open": "^10.0.3",
    "ora": "^8.0.1",
    "p-queue": "^8.0.1",
    "parse-duration": "^1.1.0",
    "pretty-bytes": "^6.1.1",
    "pretty-ms": "^9.0.0",
    "prompts": "^2.4.2",
    "semver": "^7.5.4",
    "socket.io-client": "^4.7.2",
    "string-width": "^7.0.0",
    "strip-ansi": "^7.1.0",
    "terminal-link": "^3.0.0",
    "update-notifier": "^7.0.0",
    "wrap-ansi": "^9.0.0",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/iarna__toml": "^2.0.5",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.5",
    "@types/prompts": "^2.4.9",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist",
    "templates",
    "completions",
    "scripts",
    "docs",
    "README.md",
    "ARCHITECTURE.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
