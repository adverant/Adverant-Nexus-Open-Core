{
  "name": "@graphrag/service",
  "version": "1.0.0",
  "description": "Intelligent Document Storage and Retrieval System optimized for LLMs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js tests/unit",
    "test:integration": "jest --config jest.config.js tests/integration",
    "test:e2e": "jest --config jest.config.js tests/e2e",
    "test:performance": "jest --config jest.config.js tests/performance --testTimeout=120000",
    "test:security": "jest --config jest.config.js tests/security",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:all": "ts-node tests/run-all-tests.ts",
    "test:ci": "jest --config jest.config.js --ci --coverage --maxWorkers=2",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean",
    "migrate": "ts-node src/database/migration-runner.ts",
    "migrate:prod": "node dist/database/migration-runner.js",
    "migrate:reset": "ts-node src/database/migration-runner.ts reset",
    "migrate:check": "ts-node src/database/migration-runner.ts check",
    "seed:geo": "tsx scripts/seed-geo-demo-data.ts",
    "bootstrap": "tsx scripts/bootstrap-knowledge-base.ts",
    "bootstrap:dry-run": "tsx scripts/bootstrap-knowledge-base.ts --dry-run",
    "bootstrap:verbose": "tsx scripts/bootstrap-knowledge-base.ts --verbose",
    "docker:pack": "cd ../.. && ./scripts/pack-workspace-packages.sh",
    "docker:build": "npm run docker:pack && docker build --platform linux/amd64 -t adverant/nexus-graphrag:latest -f Dockerfile ../..",
    "docker:push": "docker push localhost:32000/graphrag:latest",
    "k8s:apply": "kubectl apply -f k8s/graphrag/",
    "k8s:delete": "kubectl delete -f k8s/graphrag/",
    "k8s:logs": "kubectl logs -f -n graphrag-system -l app.kubernetes.io/name=graphrag"
  },
  "keywords": [
    "rag",
    "graphrag",
    "document-storage",
    "retrieval",
    "llm",
    "ai"
  ],
  "author": "Adverant AI",
  "license": "ISC",
  "dependencies": {
    "@qdrant/js-client-rest": "^1.9.0",
    "axios": "^1.13.5",
    "bullmq": "^5.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "file-type": "^21.3.0",
    "googleapis": "^134.0.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.3",
    "langchain": "^0.1.36",
    "mammoth": "^1.6.0",
    "marked": "^12.0.1",
    "neo4j-driver": "^6.0.1",
    "p-queue": "^6.6.2",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^4.0.0",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.0",
    "redis": "^5.11.0",
    "sharp": "^0.33.0",
    "socket.io": "^4.6.1",
    "tesseract.js": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/marked": "^6.0.0",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.11.5",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.56.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "eslint": "^10.0.0",
    "form-data": "^4.0.4",
    "jest": "^29.7.0",
    "ora": "^5.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
